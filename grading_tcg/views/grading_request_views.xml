<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_grading_request_tree" model="ir.ui.view">
        <field name="name">grading.request.tree</field>
        <field name="model">grading.request</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="service_id"/>
                <field name="date_requested"/>
                <field name="state"/>
                <field name="days_elapsed"/>
            </tree>
        </field>
    </record>

    <record id="view_grading_request_form" model="ir.ui.view">
        <field name="name">grading.request.form</field>
        <field name="model">grading.request</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="service_id"/>
                            <field name="date_requested"/>
                        </group>
                        <group>
                            <field name="state"/>
                            <field name="days_elapsed"/>
                        </group>
                    </group>
                    <group>
                        <field name="card_image" widget="image"/>
                    </group>
                    <notebook>
                        <page name="results" string="Resultados">
                            <field name="result_ids">
                                <tree>
                                    <field name="card_name"/>
                                    <field name="grade"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="card_name"/>
                                        <field name="grade"/>
                                        <field name="notes"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page name="notes" string="Notas">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_grading_request_kanban" model="ir.ui.view">
        <field name="name">grading.request.kanban</field>
        <field name="model">grading.request</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong><field name="name"/></strong>
                                <div>Cliente: <field name="partner_id"/></div>
                                <div>Estado: <field name="state"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
