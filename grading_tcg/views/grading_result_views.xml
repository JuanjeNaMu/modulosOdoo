<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_grading_result_tree" model="ir.ui.view">
        <field name="name">grading.result.tree</field>
        <field name="model">grading.result</field>
        <field name="arch" type="xml">
            <tree>
                <field name="request_id"/>
                <field name="card_name"/>
                <field name="grade"/>
            </tree>
        </field>
    </record>

    <record id="view_grading_result_form" model="ir.ui.view">
        <field name="name">grading.result.form</field>
        <field name="model">grading.result</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="request_id"/>
                        <field name="card_name"/>
                        <field name="grade"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>